<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/bg_layout" android:background="@drawable/sapi_sdk_fingerprint_dialog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sapi_sdk_standard_margin" android:layout_marginRight="@dimen/sapi_sdk_standard_margin" android:minWidth="300dp">
    <LinearLayout android:orientation="vertical" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/icon" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginTop="30dp" android:src="@drawable/sapi_sdk_fingerprint"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="再试一次"/>
        <TextView android:textSize="16sp" android:textColor="#000000" android:gravity="center" android:id="@+id/sub_title" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="请验证已有手机指纹" android:singleLine="false"/>
    </LinearLayout>
    <View android:id="@+id/transverse_divider_line" android:background="#e7e7e7" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="#222222" android:gravity="center" android:id="@+id/negative_btn" android:padding="17dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sapi_sdk_cancel" android:layout_weight="1"/>
        <View android:orientation="horizontal" android:id="@+id/divider_line" android:background="#e7e7e7" android:layout_width="1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="17sp" android:textColor="#222222" android:gravity="center" android:id="@+id/positive_btn" android:padding="16dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="换个登录方式" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
