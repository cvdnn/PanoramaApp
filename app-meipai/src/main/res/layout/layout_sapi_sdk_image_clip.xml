<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#000000" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="8">
        <com.baidu.sapi2.views.ZoomImageView android:id="@+id/sapi_background_picture" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="matrix"/>
        <com.baidu.sapi2.views.ClipBoxView android:id="@+id/sapi_clip_box" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout android:background="#000000" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <Button android:textSize="18sp" android:textColor="#ffffff" android:id="@+id/cancel_clip_btn" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginBottom="24dp" android:text="取消" android:layout_alignParentBottom="true" style="?android:attr/borderlessButtonStyle"/>
        <Button android:textSize="18sp" android:textColor="#3388ff" android:id="@+id/sure_clip_btn" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="22dp" android:layout_marginBottom="24dp" android:text="完成" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
</LinearLayout>
