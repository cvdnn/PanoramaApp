<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_wc_take_photo_title" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:id="@+id/iv_wc_take_photo_back" android:paddingLeft="13dp" android:paddingTop="5dp" android:paddingRight="25dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="25dp" android:src="@drawable/back" android:layout_centerVertical="true" android:onClick="onBackClick" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="20dp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="图片选择" android:layout_centerInParent="true"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_complete" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="14dp" android:text="完成" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <GridView android:id="@+id/gv_wc_take_photo" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:horizontalSpacing="2dp" android:verticalSpacing="2dp" android:stretchMode="columnWidth" android:numColumns="3" android:layout_below="@+id/rl_wc_take_photo_title"/>
    <RelativeLayout android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_current_dir_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:minWidth="80dp" android:text="suoyouwenj" android:layout_alignParentLeft="true"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_current_ima_count" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
