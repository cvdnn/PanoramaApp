<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@android:color/black" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/relative_item_head" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <ImageView android:layout_gravity="center" android:id="@+id/image_details_head" android:layout_width="50dp" android:layout_height="50dp" android:src="@mipmap/logo_default" android:scaleType="fitXY" android:contentDescription="头像"/>
            <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="@color/bg_white" android:id="@+id/text_details_head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="my" android:singleLine="true"/>
                <TextView android:textColor="@color/text_color_main_light" android:id="@+id/text_details_head_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="my" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton android:background="@null" android:layout_width="30dp" android:layout_height="30dp" android:src="@mipmap/logo_cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:onClick="onDetailBackClick"/>
    </RelativeLayout>
    <TextView android:textColor="@color/bg_white" android:id="@+id/text_details_content" android:padding="11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="内容"/>
</LinearLayout>
