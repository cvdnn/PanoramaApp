<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_left_menu"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_left_menu_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_menu_head_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_portrait_left_menu"
            android:layout_width="@dimen/left_menu_portrait_size"
            android:layout_height="@dimen/left_menu_portrait_size"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text=""
            android:textColor="@color/text_color_title" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_left_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ll_left_menu_foot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/left_menu_icon_size"
            android:layout_height="@dimen/left_menu_icon_size"
            android:scaleType="fitXY"
            android:src="@mipmap/exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:text="@string/exit_login"
            android:textColor="@color/text_color_main_light" />
    </LinearLayout>
</LinearLayout>
