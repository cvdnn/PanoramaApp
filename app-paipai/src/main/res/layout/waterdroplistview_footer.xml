        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/progresslayout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ProgressBar android:id="@+id/waterdroplistview_footer_progressbar" android:visibility="invisible" android:layout_width="27dp" android:layout_height="27dp" android:indeterminate="false" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/txt_progresstext" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:id="@+id/waterdroplistview_footer_hint_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/listfooterview_normal" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
