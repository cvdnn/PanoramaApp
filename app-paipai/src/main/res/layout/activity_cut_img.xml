<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/app_title"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3">
        <com.deepai.library.ui.widget.ScaleImageView android:id="@+id/iv_template_photo_pic" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="matrix"/>
        <com.deepai.library.ui.widget.ScaleImageView android:id="@+id/iv_template" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="matrix"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/rv_template" android:background="@color/colorPrimary" android:padding="@dimen/vertical_margin" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
