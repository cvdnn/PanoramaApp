<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center_vertical|center_horizontal|center"
    android:orientation="horizontal">

    <com.deepai.paipai.ui.widget.refreshview.WaterDropView
        android:id="@+id/waterdroplist_waterdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bottomcircle_x="20dp"
        app:bottomcircle_y="20dp"
        app:max_circle_radius="20dp"
        app:min_circle_radius="5dp"
        app:topcircle_x="20dp"
        app:topcircle_y="20dp"
        app:waterdrop_color="#9ba2ab" />

    <ProgressBar
        android:id="@+id/waterdroplist_header_progressbar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:visibility="gone" />
</LinearLayout>
